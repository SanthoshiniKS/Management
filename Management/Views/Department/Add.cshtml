
@model Department;

<h2>Add Departments</h2>

<div class="container mt-4">
	<div class="mb-3">
		<label for="numDepts" class="form-label">Enter Number of Departments</label>
		<input type="number" class="form-control w-25" id="numDepts" min="1" />
		<button class="btn btn-secondary mt-2" id="generateFields">Generate Fields</button>
	</div>

	<form id="multiDeptForm" style="display:none;">
		<div id="deptFields" class="mt-3"></div>
		<button type="submit" class="btn btn-primary mt-3">Submit</button>
	</form>
</div>

